<h1>Listing inspections</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Animal</th>
    <th>Length</th>
    <th>Weight</th>
    <th>Disease</th>
    <th>Temperment</th>
    <th>Mouth</th>
    <th>Vent</th>
    <th>Eyes</th>
    <th>Belly</th>
    <th>Outcome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inspections.each do |inspection| %>
  <tr>
    <td><%= inspection.date %></td>
    <td><%= inspection.animal_id %></td>
    <td><%= inspection.length %></td>
    <td><%= inspection.weight %></td>
    <td><%= inspection.disease %></td>
    <td><%= inspection.temperment %></td>
    <td><%= inspection.mouth %></td>
    <td><%= inspection.vent %></td>
    <td><%= inspection.eyes %></td>
    <td><%= inspection.belly %></td>
    <td><%= inspection.outcome %></td>
    <td><%= link_to 'Show', inspection %></td>
    <td><%= link_to 'Edit', edit_inspection_path(inspection) %></td>
    <td><%= link_to 'Destroy', inspection, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

