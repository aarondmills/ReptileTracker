<%= form_for(@feeding) do |f| %>
  <% if @feeding.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feeding.errors.count, "error") %> prohibited this feeding from being saved:</h2>

      <ul>
      <% @feeding.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date, "When did you feed #{@animal.name}?" %><br />
    
      <%= f.text_field :date %>
    
  </div>
  <div class="field">
<p>Did he/she eat the foot?</p>
    
      <%= f.check_box :successful %> Yes
    
  </div>
	<div class="field" style="display:none;">
    <%= f.label :animal %><br />
    
      <%= f.text_field :animal_id %>
    
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
  var date_field = $("#feeding_date");
  date_field.datepicker({ defaultDate: date_field.val(), dateFormat: 'yy-mm-dd' });
</script>

